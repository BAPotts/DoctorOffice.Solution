@{
  Layout = "_Layout";
}

@model DoctorOffice.Models.Doctor

<h3>Add a new doctor:</h3>
<hr />
@using (Html.BeginForm())
{
  <div class="form-group">
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name, new {@class = "form-control"})
  </div>
  <div class="form-group">
    @Html.LabelFor(model => model.Specialty)
    @Html.TextBoxFor(model => model.Specialty, new {@class = "form-control"})
  </div>

  <input type="submit" value="Add new doctor" class="btn" />
}
<p>@Html.ActionLink("Back to doctors list", "Index")</p>