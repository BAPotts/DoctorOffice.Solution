@{
  Layout = "_Layout";
}

@using DoctorOffice.Models;
@model List<DoctorOffice.Models.Doctor>;

<h3>Doctors list:</h3>
<hr />
@if (@Model.Count == 0)
{
  <p>No doctors have been added yet!</p>
} 

@foreach (Doctor doctor in Model)
{
  <p>@Html.ActionLink($"{doctor.Name}", "Details", new { id = doctor.DoctorId })</p>
}

<p>@Html.ActionLink("Home", "Index", "Home")</p>
<p>@Html.ActionLink("Add new doctor", "Create")</p> 